<p id="notice"><%= notice %></p>

<h1>Children</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Breakfast</th>
      <th>Souptime</th>
      <th>Sleep</th>
      <th>Secondcourse</th>
      <th>Snack</th>
      <th>Supplies</th>
      <th>Comment</th>
      <th>Dates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.surname %></td>
        <td><%= child.breakfast %></td>
        <td><%= child.souptime %></td>
        <td><%= child.sleep %></td>
        <td><%= child.secondcourse %></td>
        <td><%= child.snack %></td>
        <td><%= child.supplies %></td>
        <td><%= child.comment %></td>
        <td><%= child.dates %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

